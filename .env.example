# IMPORTANT: Set this to your actual PostgreSQL connection string
# After setting, run: npm run db:fix (to create Platform enum if missing)
DATABASE_URL="postgresql://user:password@localhost:5432/admanager?schema=public"

# Clerk Auth
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# Facebook Marketing API
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_API_VERSION=v23.0

# Facebook Webhooks
# Generate a random string for webhook verification
# Example: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
FACEBOOK_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Cron Job Secret (for automatic data sync)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CRON_SECRET=your_secure_random_secret_min_32_characters

# Token Encryption Key (for encrypting Facebook access tokens)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
TOKEN_ENCRYPTION_KEY=your_secure_encryption_key_min_32_characters
